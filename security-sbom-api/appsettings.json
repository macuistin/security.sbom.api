{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "DefaultScheme": "Bearer",
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [ "security.sbom.api" ],
        "ValidType": [ "JWT", "at+jwt", "AT+JWT" ],
        "ValidIssuer": "https://security-sts.ci.eshopworld.net/"
      }
    }
  },
  "Gremlinq": {
    "CosmosDb": {
      "Uri": "wss://macuistin-sbom.gremlin.cosmos.azure.com:443/",
      "Database": "SPDXDatabase",
      "Graph": "SPDXContainer"
    },
    "QueryLogging": {
      "Verbosity": "QueryOnly",
      "LogLevel": "Trace",
      "Formatting": "Indented",
      "GroovyFormatting": "AllowInlining"
    }
  }
}
